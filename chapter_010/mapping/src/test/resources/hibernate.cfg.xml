<?xml version='1.0' encoding='UTF-8'?>
<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:mem:carstoretest;sql.enforce_size=false</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping resource="carstore/models/Image.hbm.xml"/>
        <mapping resource="carstore/models/WheelDrive.hbm.xml"/>
        <mapping resource="carstore/models/Brand.hbm.xml"/>
        <mapping resource="carstore/models/Transmission.hbm.xml"/>
        <mapping resource="carstore/models/BodyStyle.hbm.xml"/>
        <mapping resource="carstore/models/User.hbm.xml"/>
        <mapping resource="carstore/models/Model.hbm.xml"/>
        <mapping resource="carstore/models/Engine.hbm.xml"/>
        <mapping resource="carstore/models/Car.hbm.xml"/>
        <mapping resource="carstore/models/Advertisement.hbm.xml"/>

    </session-factory>
</hibernate-configuration>